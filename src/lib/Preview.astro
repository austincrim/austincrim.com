---
const { code } = Astro.props

const html = `
<!DOCTYPE html>
<html>
<head><meta charset="UTF-8"></head>
<body>
<script type="module">
${code}
<\/script>
<div id='app'></div>
</body>
</html>
`

const src = "data:text/html;base64," + Buffer.from(html).toString("base64")
---

<div style="margin: 1em 0;">
  <iframe
    src={src}
    sandbox="allow-scripts"
    style="width:100%;height:200px;border:1px solid #ccc;border-radius:4px;"
  ></iframe>
</div>
