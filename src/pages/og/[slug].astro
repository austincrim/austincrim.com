---
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
  const blogEntries = await getCollection('posts')
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }))
}

let { title } = Astro.props
---

<div
  class="flex flex-col items-center justify-center w-[1200px] relative mx-auto h-screen bg-slate-50"
>
  <div class="gradient-container h-3/4 rounded-xl p-1 shadow-md m-8">
    <div
      class="flex flex-col space-y-20 h-full justify-center heading p-10 bg-white bg-opacity-60 text-slate-600"
    >
      <h1 class="inline text-6xl font-bold leading-[1.3]">
        {title}
      </h1>
      <div
        class="flex items-center justify-between max-w-4xl mx-auto space-x-12"
      >
        <img
          src="https://pbs.twimg.com/profile_images/1631798626421727240/34EyrNYA_400x400.jpg"
          class="object-cover w-32 border-2 border-gray-700 h-32 rounded-full"
        />
        <p class="text-4xl">I'm Austin and I wrote something for you.</p>
      </div>
    </div>
  </div>
</div>
